<form class="item sheet crb-style lignee" autocomplete="off">
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
    </header>
    <div class="details">
        <img src="{{item.img}}" data-edit="img">
        <div class="item-domain">
            <label class="green-label" for="domain">{{localize "SW.Labels.domain"}}</label>
            <input id="domain" name="system.domain" value="{{data.domain}}">
        </div>
        <div class="item-bonus">
            <label class="green-label" for="bonus">{{localize "SW.Labels.bonus"}}</label>
            <input id="bonus" name="system.bonus" value="{{data.bonus}}">
        </div>
        <div class="item-description">
            <label class="green-label" for="description">{{localize "SW.Labels.description"}}</label>
            <textarea name="system.description">{{data.description}}</textarea>
        </div>
    </div>
</form>