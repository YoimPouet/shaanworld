<form class="puiser-dialog">
    <fieldset style="margin-bottom: 5px;">
        <legend>{{localize "chat.puiser.choices"}}</legend>
        {{#if choix.choix1}}
        <div>
            <input style="margin-right: 5px;" type="radio" id="choix1" name="result" value="{{choix.choix1.value}}">
            <label for="choix1">
                <img src="systems/shaanrenaissance/assets/icons/dice-result/{{choix.choix1.flavor}}/d10_{{choix.choix1.color}}_{{#ifeq choix.choix1.value 0}}1{{/ifeq}}{{choix.choix1.value}}.png">
                <span style="margin-left: 5px">{{localize "SW.Labels.score"}}: <b data-flavor="{{choix.choix1.flavor}}">{{choix.choix1.value}}</b> + <b>{{domain.value}}</b> ({{localize (concat "SW.domains." domain.name)}}) + <b>{{choix.bonus}}</b></span>
                <span style="margin-left: 5px">(-1 {{localize choix.choix1.flavor}})</span>
            </label>
        </div>
        {{/if}}
        {{#if choix.choix2}}
        <div>
            <input style="margin-right: 5px;" type="radio" id="choix2" name="result" value="{{choix.choix2.value}}">
            <label for="choix2">
                <img src="systems/shaanrenaissance/assets/icons/dice-result/{{choix.choix2.flavor}}/d10_{{choix.choix2.color}}_{{#ifeq choix.choix2.value 0}}1{{/ifeq}}{{choix.choix2.value}}.png">
                <span style="margin-left: 5px">{{localize "SW.Labels.score"}}: <b data-flavor="{{choix.choix2.flavor}}">{{choix.choix2.value}}</b> + <b>{{domain.value}}</b> ({{localize (concat "SW.domains." domain.name)}}) + <b>{{choix.bonus}}</b></span>
                <span style="margin-left: 5px">(-1 {{localize choix.choix2.flavor}})</span>
            </label>
        </div>
        {{/if}}
    </fieldset>
    <input id="domain" type="hidden" name="domain" value="{{domain}}">
    <input type="hidden" id="bonus" name="bonus" value="{{choix.bonus}}">
</form>