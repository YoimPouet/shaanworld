<form class="actor sheet crb-style adversite" autocomplete="off">
    <header>
        <input name="name" value="{{actor.name}}">
        <img class="player-image" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" {{#if editable}}data-edit="img"{{/if}} />
    </header>
    <section class="adversite">
        <h2>{{localize "SW.Labels.adversite"}} <input type="checkbox" name="system.active" title="Cliquez ici pour activer l'AdversitÃ©" {{checked data.active}}></h2>
        <div class="adversite-nbActe">
            <label for="nbActe">{{localize "SW.Labels.nbActe"}}</label>
            <input id="nbActe" type="number" name="system.nbActe" value="{{data.nbActe}}">
        </div>
        <div class="adversite-difficulty">
            <label for="difficulty">{{localize "SW.Labels.difficulty"}}</label>
            <input id="difficulty" type="number" name="system.difficulty" value="{{data.difficulty}}">
        </div>
        <div class="adversite-damages">
            <label for="damages">{{localize "SW.Labels.damages"}}</label>
            <input id="damages" type="number" name="system.damages" value="{{data.damages}}">
        </div>

    </section>
    <section class="domains">
        <h2>{{localize "SW.Labels.domains"}}</h2>
            {{#each data.domains as |domain d|}}
                 <div class="domain-checkbox {{d}}">
                    <label for="{{d}}">{{localize d}}</label>
                    <input type="checkbox" name="system.domains.{{d}}" {{checked domain}}>
                 </div>
            {{/each}}
    </section>
    <section class="details">
        <div class="adversite-description">
            <label for="description">
                {{localize "SW.Labels.description"}}
            </label>
            <textarea id="description" name="system.description">{{data.description}}</textarea>
        </div>
        <div class="adversite-secret">
            <label for="secret">
                {{localize "SW.Labels.secret"}}
            </label>
            <textarea id="secret" name="system.secret">{{data.secret}}</textarea>
        </div>
        <div class="adversite-duree">
            <label for="duree">
                {{localize "SW.Labels.duree"}}
            </label>
            <input id="duree" name="system.duree" value="{{data.duree}}">
        </div>
        <div class="adversite-resolution">
            <label for="resolution">
                {{localize "SW.Labels.resolution"}}
            </label>
            <textarea id="resolution" name="system.resolution">{{data.resolution}}</textarea>
        </div>
        <div class="adversite-bonusNarratif">
            <label for="bonusNarratif">
                {{localize "SW.Labels.bonusNarratif"}}
            </label>
            <textarea id="bonusNarratif" name="system.bonusNarratif">{{data.bonusNarratif}}</textarea>
        </div>
    </section>
</form>