  <div class="whitebox character-details">
          {{!-- Lignée --}}
          <div class="pc pc_lignee item" data-item-id="{{lignee._id}}">
            <div class="input">
                <label class="details-label green-label" style="font-weight:700;">{{localize "Item.lignee"}}</label>
                <h3>
                    <span class="value">{{lignee.name}}</span>
                    {{#if @root.editable}}
                    {{#if lignee}}
                      <div class="item-controls">
                        <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-fw fa-trash"></i></a>
                      </div>
                    {{else}}
                        <a class="open-compendium" data-compendium="shaanworld.lignee"><i class="fas fa-fw fa-circle-plus"></i></a>
                    {{/if}}
                    {{/if}}                        
                </h3>
            </div>            
        </div>
        {{!-- Peuple --}}
          <div class="pc pc_people item" data-item-id="{{people._id}}">
            <div class="input">
                <label class="details-label green-label" style="font-weight:700;">{{localize "Item.people"}}</label>
                <h3>
                    <span class="value">{{people.name}}</span>
                    {{#if @root.editable}}
                    {{#if people}}
                      <div class="item-controls">
                        <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-fw fa-trash"></i></a>
                      </div>
                    {{else}}
                        <a class="open-compendium" data-compendium="shaanworld.people"><i class="fas fa-fw fa-circle-plus"></i></a>
                    {{/if}}
                    {{/if}}                        
                </h3>
            </div>            
        </div>
          {{!-- Archétype --}}
          <div class="pc pc_archetype item">
            <div class="input">
                <label class="details-label green-label" style="font-weight:700;">{{localize "Item.archetype"}}</label>
                <select name="system.archetype" value="{{data.archetype}}">
                  {{#select data.archetype}}
                  {{#each config.archetypes as |archetype|}}
                    <option value="{{archetype}}">{{archetype}}</option>
                  {{/each}}
                  {{/select}}
                </select>
            </div>            
        </div>
        {{!-- Role --}}
          <div class="pc pc_role item" data-item-id="{{role._id}}">
            <div class="input">
                <label class="details-label green-label" style="font-weight:700;">{{localize "Item.role"}}</label>
                <h3>
                    <span class="value">{{role.name}}</span>
                    {{#if @root.editable}}
                    {{#if role}}
                      <div class="item-controls">
                        <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-fw fa-trash"></i></a>
                      </div>
                    {{else}}
                        <a class="open-compendium" data-compendium="shaanworld.role"><i class="fas fa-fw fa-circle-plus"></i></a>
                    {{/if}}
                    {{/if}}                        
                </h3>
            </div>            
        </div>
        <div class="pc pc_temper">
          <div class="input">
          <label for="" class="green-label">{{localize "SW.Labels.Temper"}}</label>
          <input type="text" name="system.temper1" value="{{data.temper1}}">
          <input type="text" name="system.temper2" value="{{data.temper2}}">
          </div>
        </div>
  </div>
  <div class="character-experience">
    <label for="current-exp" style="margin-bottom:10px">{{localize "SW.Labels.exp"}}</label>
