      />
      <label for="soin-corps">{{localize "SW.Labels.corps"}}</label>
      <input
        id="soin-corps"
        style="top:273px;left:-207.7px"
        type="checkbox"
        data-trihn="corps"
        name="system.trihns.corps.isHealed"
        {{checked data.trihns.corps.isHealed}}
